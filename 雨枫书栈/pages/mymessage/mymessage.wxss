/* pages/mymessage/mymessage.wxss */
.msg{
  position: relative;
  height: 70rpx;
  width: 710rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  border-bottom: 18rpx solid #F2F2F2;
}
.msg_icon{
  width: 40rpx;
  height: 40rpx;
}
.msg_title{
  width: 415rpx;
  height: 60rpx;
}
.msg_time{
  color: #A2A2A2;
  font-size: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
}
.msg_type{
  font-size: 30rpx;
  color: #000;
  height: 30rpx;
  line-height: 30rpx;
}
.msg_jianjie{
  font-size: 24rpx;
  color: #A2A2A2;
  line-height: 24rpx;
  overflow: hidden;
  height: 24rpx;
  margin-top: 10rpx;
}
.noread{
  width: 16rpx;
  height: 16rpx;
  border-radius: 100%;
  background-color: #f00;
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
}