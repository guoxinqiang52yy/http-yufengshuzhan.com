/* pages/book_list/book_list.wxss */
.border_right{
  border-right: 2rpx solid #BABABA;
}
.zi_border{
  height: 4rpx;
  width: 48rpx;
  background-color: #6658A6;
  position: relative;
  top:2rpx;
  left: 29rpx;
}
.book_recommend{
  width: 100%;
  height: 280rpx;
  border-bottom: #D9D9D9 2rpx solid;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: center;
}
.book_recommend_img{
  height: 240rpx;
  width: 180rpx;
  /* margin-top: 20rpx; */
}
.book_recommend_content{
  height: 200rpx;
  width: 500rpx;
  margin-top: 20rpx;
}
.book_recommend_title{
  height: 28rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #333333;
}
.book_recommend_jianjie{
  height: 72rpx;
  width: 100%;
  color: #666666;
  line-height: 24rpx;
  font-size: 24rpx;
  margin-top: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.book_recommend_surplus{
  margin-top: 20rpx;
  height: 26rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-direction: row;
}
.book_recommend_surplus_icon{
  height: 26rpx;
  width: 26rpx;
}
.surplus_num{
  margin-left: 10rpx;
  font-size: 26rpx;
  color: #6658A6;
  height: 26rpx;
  line-height: 26rpx;
}
.border_zi_paihang{
  border:#6658A6 2rpx solid;
}
.search_type{
  height: 100rpx;
  width: 100%;
  font-size: 28rpx;
  line-height: 100rpx;
  color: #333333;
  border-bottom: 2rpx #BABABA solid;
}
.result_text{
  margin-left: 40rpx;
}