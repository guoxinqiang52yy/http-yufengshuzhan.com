/* pages//my_balance/my_balance.wxss */
.balance-view{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-bottom: 2rpx solid #C7C7C7;
}
.balance-left{
  width: 400rpx;
  height: 100rpx;
  text-align: left;
  padding-top: 20rpx;
}
.balance-right{
  width: 100rpx;
  height: 50rpx;
}
.balance-title{
  font-size: 36rpx;
  color: #333;
  line-height: 36rpx;
  height: 36rpx;
}
.balance-time{
  color: #999;
  font-size: 28rpx;
  line-height: 28rpx;
  height: 28rpx;
  margin-top: 14rpx;
}