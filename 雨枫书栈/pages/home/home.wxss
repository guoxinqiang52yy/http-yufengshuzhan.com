}
.hot_book{
  width: 100%;
  height: 270rpx;
}
.title{
  display: flex;
  justify-content: space-between;
}
.hot_book_title{
  margin-left: 4rpx;
  display: inline-flex;
  background: #FFFFFF;
  flex-direction: row;
  flex-wrap: nowrap;
  border-left: 6rpx #6C5FA9 solid;
  padding-left: 22rpx;
  height: 28rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  justify-content: space-between;
  margin-top: 20rpx;
}
.br_img_view{
  width: 50rpx;
  height: 50rpx;
  padding: 15rpx;
  background-color: #6C5FA9;
