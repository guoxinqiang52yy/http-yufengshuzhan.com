  margin: 50rpx 0 0 90rpx;
}
.br_img{
  width: 100%;
  height: 100%
}
.more_view{
  display: inline-flex;
  justify-content: space-between;
  font-size: 24rpx;
  padding-right: 40rpx;
  height: 24rpx;
  line-height: 28rpx;
  margin-top: 20rpx;
  color: #666666;
}
