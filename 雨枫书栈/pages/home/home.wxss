}
.activity_icon{
  width: 100rpx;
  height: 100rpx;
  margin-top: -4rpx;
}
.start_activity_text{
  width: 50%;
  margin: auto;
  height: 36rpx;
  font-size: 36rpx;
  line-height: 36rpx;
  font-weight: 600rpx;
  justify-content: flex-start;
  display: flex;
  align-items: center;
}
.text_marleft{
  margin-left: 30rpx;
}
.start_add{
  height: 40rpx;
