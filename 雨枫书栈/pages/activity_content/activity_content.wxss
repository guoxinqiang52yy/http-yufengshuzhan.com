/* pages/activity_content/activity_content.wxss */
page{
  background-color: #fff;
}
/* 活动图片*/
.img-view{
  width: 100%;
  height: 326rpx;
}
.act-img{
  width: 622rpx;
  height: 240rpx;
  margin: 20rpx auto;
  display: block;
}
.act-name{
  font-size: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  color: #333;
  margin-left: 64rpx;
  margin-top: 20rpx;
}
.host-view{
  width: 100%;
  height: 244rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}
.head-view{
  width: 90rpx;
  height: 90rpx;
  border-radius: 100%;
  margin-left: 30rpx;
}
.initiator_head_img{
  height: 100%;
  width: 100%;
  border-radius: 100%;
}
.host-right{
  width: 500rpx;
  margin-left: 30rpx;
}
.host-name{
  font-size: 36rpx;
  color: #333;
}
.host-content{
  width: 500rpx;
  height: 24rpx;
  line-height: 24rpx;
  display: flex;
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #666;
  flex-direction: row; 
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap; 
}
.host-num{
  margin-left: 12rpx;
  color: #333
}
.host-marginleft{
  margin-left: 44rpx;
}
.host-attention{
  margin-top: 20rpx;
  border: 2rpx #6658A6 solid;
  border-radius: 6rpx;
  text-align: center;
  color: #6658A6;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  width: 80rpx;
}
.host-icon{
  position: absolute;
  top: 0rpx;
  left: 670rpx;
  width: 80rpx;
  height: 80rpx;

}
/*已报名*/
.content_view{
  width: 750rpx;
  height: 108rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.content_title{
  margin-left: 4rpx;
  border-left: #6658A6 6rpx solid;
  /* width: 728rpx; */
  height: 28rpx;
  line-height: 28rpx;
  color: #333333;
  padding-left:20rpx;
  font-size: 28rpx;
}
.head-img{
  height: 70rpx;
  width: 70rpx;  
  border-radius: 100%;
}
.host-head-icon{
  position: relative;
  top: -30rpx;
  left: 92rpx;
  width: 30rpx;
  height: 30rpx;
}
.head-margin{
  margin-left: 20rpx;
  display:inline-block;
}
.applied-view{
  display: flex;
  height: 70rpx;
  width: 500rpx;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: nowrap;
  white-space: nowrap;
}
/*活动须知*/
.act-notice{
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  height: auto;
  display: flex;
  flex-direction:row;
  justify-content: flex-start;
  align-items: flex-start; 
}
.notice-contetn{
  width: 510rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-left: 40rpx;
  justify-content: space-between;
  align-content: flex-start;
}
.notice-info{
  width: 50%;
  /* height: 24rpx; */
  line-height: 24rpx;
  text-align: left;
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
}
.notice-icon{
  width: 30rpx;
  height: 30rpx;
}
.notice-text{
  margin-left: 12rpx;
}
.red-font{
  color: #FF0000
}
.mar-top{
  margin-top: 36rpx;
}
.mar-left{
  margin-left: -1rpx;
}
.info-width{
  width: 100%;
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap;
}
/*活动详情*/
.act-content{
  width: 100%;
  padding: 20rpx 0;
}
.content-detail{
  width: 710rpx;
  margin: 20rpx auto 0 auto;
  color: #666;
  font-size: 20rpx;
}
.act-comment{
  padding: 20rpx 0;
  width: 100%;
}
.title{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.more_view{
  display: inline-flex;
  justify-content: space-between;
  font-size: 24rpx;
  padding-right: 40rpx;
  height: 24rpx;
  line-height: 28rpx;
  color: #666666;
}
.more_img{
  height: 28rpx;
  width: 14rpx;
  margin-left: 10rpx;
}
.comment-content{
  width: 750rpx;
  margin-top: 20rpx;
}
.comment-text{
  width: 710rpx;
  margin: auto;
  color: #989898;
  font-size: 24rpx;
  line-height: 26rpx;
}
/*底部按钮*/
.bottom_btn{
  height: 98rpx;
  width: 750rpx;
  border-top:#F2F2F2 2rpx solid;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx; 
}
.btn1{
  width: 226rpx;
  height: 98rpx;
  text-align: center;
  line-height: 98rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}
.btn-icon{
  height: 40rpx;
  width: 40rpx;
}
.btn1-text{
  margin-left: 20rpx;
  color: #333;
}
.btn2{
  width: 300rpx;
  height: 98rpx;
  font-size: 30rpx;
  line-height: 98rpx;
  color: #333;
  background-color: #E0E0E0;
  text-align: center;
}
.bor-right{
  border-right: #D0CDCD 2rpx solid;
}
.btn-bgcolor{
  color: #fff;
  background: #6658A6
}
/*取消按钮默认样式*/
button::after {
  border: none;
  padding: 0;
}
.button-hover{
  background-color: #fff;
}
button {
  background-color: #fff;
  padding: 0;
  margin: 0;
  border-radius:0;
  box-sizing:unset;
}
/*评论图片显示*/
.comment-img-view{
  width: 100%;
  height: 124rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: nowrap;
  white-space: nowrap;
  margin-top: 20rpx;
}
.comment-img{
  width: 164rpx;
  height: 124rpx;
  margin-left: 20rpx;
  display:inline-block;
}
.buttom-view{
  height: 98rpx;
  width: 100%;
}
.check-more{
  height: 50rpx;
  width: 180rpx;
  border: #6658A6 solid 2rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 24rpx;
  margin: 20rpx auto;
}
/*回复*/
.reply-triangle{
  width: 0;
  height: 0;
  border-width: 20px;
  border-style: solid;
  border-color: transparent transparent #E6E6E6 transparent ;
  margin: -20rpx 0 0 60rpx;
}
.reply{
  width: 670rpx;
  margin: auto;
  height: auto;
  background-color: #E6E6E6;
  padding: 20rpx;
}
.reply-detail{
  width: 100%;
  line-height: 34rpx;
  font-size: 24rpx;
}
.reply-color1{
  color: #666;
}
.reply-color2{
  color: #6658A6;
}
.reply-btn{
  width: 80rpx;
  height: 30rpx;
  display: inline-flex;
  justify-content: flex-start;
  border: #979797 2rpx solid;
  border-radius: 16rpx;
  margin-left: 650rpx;
  color: #979797;
  font-size: 20rpx;
}
.reply-icon{
  width: 20rpx;
  height: 20rpx;
  margin: 5rpx 0 0 10rpx;
}